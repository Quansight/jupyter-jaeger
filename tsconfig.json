{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "preserveWatchOutput": true,
    "outDir": "lib",
    "skipLibCheck": true,
    "rootDir": "src",
    "strict": true,
    "target": "es2017",
  },
  "include": ["src/*"]
}
